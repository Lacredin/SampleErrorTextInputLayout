<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_purple">


    <ImageView
        android:id="@+id/image_location"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_passport_input_serial_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_passport_input_serial_info" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_passport_input_serial_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android.support.design:hintAnimationEnabled="true"
        android.support.design:hintEnabled="true"
        android.support.design:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_location"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_passport_input_serial_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="100"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:id="@+id/image_street"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_passport_input_issued_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_passport_input_issued_info" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_passport_input_issued_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android.support.design:hintAnimationEnabled="true"
        android.support.design:hintEnabled="true"
        android.support.design:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_street"
        app:layout_constraintTop_toBottomOf="@+id/fragment_passport_input_serial_info">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_passport_input_issued_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:id="@+id/image_house"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_passport_input_subdivision_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_passport_input_subdivision_info" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_passport_input_subdivision_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android.support.design:hintAnimationEnabled="true"
        android.support.design:hintEnabled="true"
        android.support.design:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_house"
        app:layout_constraintTop_toBottomOf="@+id/fragment_passport_input_issued_info">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_passport_input_subdivision_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:id="@+id/image_apartment"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_passport_input_date_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_passport_input_date_info" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_passport_input_date_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"

        android:layout_marginTop="8dp"
        android.support.design:hintAnimationEnabled="true"
        android.support.design:hintEnabled="true"
        android.support.design:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/fragment_passport_input_date_image_dialog"
        app:layout_constraintStart_toEndOf="@+id/image_apartment"
        app:layout_constraintTop_toBottomOf="@+id/fragment_passport_input_subdivision_info">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_passport_input_date_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/fragment_passport_input_date_image_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:paddingEnd="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_passport_input_date_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_passport_input_date_info" />


    <Button
        android:id="@+id/fragment_passport_input_button_save"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="8dp"
        android:enabled="false"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_passport_input_date_info"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>